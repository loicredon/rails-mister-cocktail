<h1>Le meilleur des cocktails</h1>

<%= @cocktail.name  %>

<div>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %>
    <%= dose.description %></li>
    <li><%= link_to 'delete dose above', dose_path(dose), method: :delete %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'add a dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'back to cocktails', cocktails_path %>
